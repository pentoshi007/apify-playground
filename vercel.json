{
  "buildCommand": "npm install --legacy-peer-deps && npm run build",
  "functions": {
    "api/apify/[...path].js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/apify/(.*)",
      "destination": "/api/apify/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}